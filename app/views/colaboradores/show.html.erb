<%- model_class = Colaborador -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human %></h1>
</div>

<dl class="dl-horizontal">
	<dt><strong><%= model_class.human_attribute_name(:empresa_id) %>:</strong></dt>
  <dd><%= @colaborador.empresa.nome %></dd>
  <dt><strong><%= model_class.human_attribute_name(:usuario_id) %>:</strong></dt>
  <dd><%= @colaborador.usuario.nome %></dd>
  <dt><strong><%= model_class.human_attribute_name(:tipo) %>:</strong></dt>
  <dd><%= TIPO_COLABORADOR[@colaborador.tipo] %></dd>
  <dt><strong><%= model_class.human_attribute_name(:identificador) %>:</strong></dt>
  <dd><%= @colaborador.identificador %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              colaboradores_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_colaborador_path(@colaborador), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              colaborador_path(@colaborador),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>
